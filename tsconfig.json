{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@fp-ts-playground/*": ["packages/*/src"]
    },
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "outDir": "./dist"
  },
  "include": ["packages/*/src"],
  "exclude": ["node_modules", "dist"]
}
